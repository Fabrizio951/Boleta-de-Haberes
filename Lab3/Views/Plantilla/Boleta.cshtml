@model Lab3.Models.Haberes

@{
    ViewBag.Title = "Boleta";
}

<h2>Boleta</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("DNI", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.dni, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Cargo", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.cargo, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Basico", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.basico, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Seguro", htmlAttributes: new { @class = "control-label col-md-2" })
            AFP
            @Html.RadioButtonFor(model => model.seguro, "AFP")
            ONP
            @Html.RadioButtonFor(model => model.seguro, "ONP")
        </div>

        <div class="form-group">
            @Html.Label("Bonificacion", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("bonificacion", @ViewBag.bonificacion as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Remuneración", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("remuneracion", @ViewBag.remuneracion as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Aportación", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("aportacion", @ViewBag.aportacion as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.Label("Neto", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("Neto", @ViewBag.neto as string, htmlAttributes: new { @class = "for-control col-md-10" })
        </div>

        <div class="form-group">
            @Html.ActionLink("Nuevo", "Boleta", null, new { @class = "control-label col-md-2" })
            <input type="submit" value="Procesar" class="btn btn-default" />
        </div>

    </div>
}

